// App.test.js
import React from 'react';
import { render } from '@testing-library/react-native';
import App from './App';

describe('App Navigation', () => {
  it('renders the app and shows the Dashboard tab', async () => {
    const { findByText } = render(<App />);

    // Adjust this based on what text is always visible in your Dashboard
    const dashboardTab = await findByText(/Dashboard/i);
    expect(dashboardTab).toBeTruthy();
  });

  it('contains all main navigation tabs', async () => {
    const { findByText } = render(<App />);
    const tabs = [
      'Dashboard',
      'Profile',
      'Suggestions',
      'Workout',
      'Tracker',
      'Journal',
      'Trends',
      'Settings',
    ];

    for (const tab of tabs) {
      const element = await findByText(new RegExp(tab, 'i'));
      expect(element).toBeTruthy();
    }
  });
});